generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  owner
  admin
  attendant
  provider
}

enum Specialty {
  barber
  hairdresser
  nail
  esthetic
  makeup
  tattoo
  other
}

enum AppointmentState {
  scheduled
  in_service
  done
  no_show
  cancelled
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // <-- necessário para o upsert
  nif       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  services     Service[]
  users        User[]
  providers    Provider[]
  blocks       Block[]
  appointments Appointment[]
  locations    Location[]
}

model Location {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  slug      String
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  providers    Provider[]
  appointments Appointment[]
  blocks       Block[]
  users        User[]

  @@unique([tenantId, slug])
  @@index([tenantId])
}

model User {
  id           String    @id @default(cuid())
  tenantId     String
  locationId   String?
  role         Role
  name         String
  email        String    @unique
  phone        String?
  passwordHash String
  provider     Provider?
  active       Boolean   @default(true)
  createdAt    DateTime  @default(now())

  tenant       Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  location     Location?      @relation(fields: [locationId], references: [id])
  tokens       RefreshToken[]
  appointments Appointment[]

  @@index([tenantId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Service {
  id          String   @id @default(cuid())
  tenantId    String
  name        String
  durationMin Int // duração em minutos
  priceCents  Int // preço em centavos
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@index([tenantId])
  @@index([tenantId, active])
  @@index([tenantId, name])
}

model Provider {
  id              String    @id @default(cuid())
  tenantId        String
  userId          String    @unique // <-- único para garantir 1:1 com User
  locationId      String
  name            String
  specialty       Specialty @default(other)
  weekdayTemplate Json?
  active          Boolean   @default(true)

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  blocks       Block[]
  appointments Appointment[]

  @@index([tenantId])
  @@index([tenantId, active])
  @@index([tenantId, locationId])
}

model Block {
  id         String   @id @default(cuid())
  tenantId   String
  providerId String
  startAt    DateTime
  endAt      DateTime
  reason     String?
  createdAt  DateTime @default(now())

  tenant     Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  provider   Provider  @relation(fields: [providerId], references: [id], onDelete: Cascade)
  location   Location? @relation(fields: [locationId], references: [id])
  locationId String?

  @@index([tenantId])
  @@index([providerId, startAt, endAt])
}

model Appointment {
  id                 String           @id @default(cuid())
  tenantId           String
  providerId         String
  serviceId          String
  locationId         String
  serviceName        String
  serviceDurationMin Int
  servicePriceCents  Int
  startAt            DateTime
  endAt              DateTime
  clientName         String
  clientPhone        String
  status             AppointmentState @default(scheduled)

  createdById String?
  createdBy   User?   @relation(fields: [createdById], references: [id], onDelete: SetNull)

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
  @@index([tenantId, providerId, startAt, endAt])
}
