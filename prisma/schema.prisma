generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  owner
  admin
  attendant
  provider
}

enum Specialty {
  barber
  hairdresser
  nail
  esthetic
  makeup
  tattoo
  other
}

enum AppointmentStatus {
  scheduled
  confirmed
  canceled
  done
}

model Tenant {
  id           String        @id @default(cuid())
  name         String
  nif          String? // opcional
  createdAt    DateTime      @default(now())
  services     Service[]
  users        User[]
  providers    Provider[]
  blocks       Block[]
  appointments Appointment[]
}

model User {
  id           String    @id @default(cuid())
  tenantId     String
  role         Role
  name         String
  email        String
  phone        String?
  passwordHash String
  provider     Provider?
  active       Boolean   @default(true)
  createdAt    DateTime  @default(now())

  // refresh tokens serão guardados na tabela RefreshToken
  tenant       Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  tokens       RefreshToken[]
  appointments Appointment[]

  @@unique([tenantId, email]) // email único dentro do tenant
  @@index([tenantId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Service {
  id          String   @id @default(cuid())
  tenantId    String
  name        String
  durationMin Int // duração em minutos
  priceCents  Int // preço em centavos
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@index([tenantId])
  @@index([tenantId, active])
  @@index([tenantId, name])
}

model Provider {
  id              String    @id @default(cuid())
  tenantId        String
  userId          String    @unique // <-- único para garantir 1:1 com User
  name            String
  specialty       Specialty @default(other)
  weekdayTemplate Json?
  active          Boolean   @default(true)

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  blocks       Block[]
  appointments Appointment[]

  // Índices úteis para consultas por tenant
  @@index([tenantId])
  @@index([tenantId, active])
}

model Block {
  id         String   @id @default(cuid())
  tenantId   String
  providerId String
  startAt    DateTime
  endAt      DateTime
  reason     String?
  createdAt  DateTime @default(now())

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([providerId, startAt, endAt])
}

model Appointment {
  id          String   @id @default(cuid())
  tenantId    String
  providerId  String
  serviceId   String
  startAt     DateTime
  endAt       DateTime
  clientName  String
  clientPhone String

  createdById String?
  createdBy   User?   @relation(fields: [createdById], references: [id], onDelete: SetNull)

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
  @@index([tenantId, providerId, startAt, endAt])
}
